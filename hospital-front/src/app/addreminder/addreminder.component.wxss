.content .patient_select {
  display: flex;
}
.content .patient_select select {
  margin-left: 20px;
}
.content .content-input {
  margin-top: 20px;
}
.content .duration-time {
  display: flex;
  margin-top: 20px;
}
.content .duration-time .duration-box1 {
  font-weight: bolder;
  margin-right: 10px;
}
.content .duration-time .duration-input {
  margin-right: 10px;
  margin-left: 10px;
}
.content .duration-time .duration-hour {
  margin-left: 10px;
}
.content .submit-button {
  margin-top: 20px;
}
.content .submit-button .submit {
  width: 100px;
  height: 30px;
  font-size: 15px;
  color: #f2ba48;
  background-color: #13348e;
  margin-right: 30px;
}
.content .submit-button .clear {
  width: 100px;
  height: 30px;
  font-size: 15px;
  color: white;
  background-color: #b20404;
}
.priority {
  margin-top: 20px;
  display: flex;
}
.priority select {
  margin-left: 20px;
}
.warning {
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid black;
  background-color: white;
  position: absolute;
  width: 300px;
  height: 300px;
  top: 100px;
  right: 350px;
}
.warning .warning-box {
  font-size: 20px;
  text-align: center;
}
.warning .warning-box .warning-img img {
  width: 150px;
}
.warning .warning-box .warning-title {
  margin-bottom: 40px;
}
.warning .warning-box .warning-button button {
  width: 100px;
  height: 30px;
  font-size: 20px;
  color: #f2ba48;
  background-color: #13348e;
}
.show {
  display: none;
}
